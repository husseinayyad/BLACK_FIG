<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.task.black_fig">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.task.black_fig.AdminEditCategoryInformationActivity"></activity>
        <activity android:name="com.task.black_fig.AdminEditRecipesInformationActivity" />
        <activity android:name="com.task.black_fig.AdminEditRecipesActivity" />
        <activity android:name=".AdminEditCategoryActivity" />
        <activity android:name="com.task.black_fig.AddCommentActivity" />
        <activity android:name="com.task.black_fig.RecipesdetailsActivity" />
        <activity android:name="com.task.black_fig.AddRecipesActivity" />
        <activity android:name="com.task.black_fig.AddCategoryActivity" />
        <activity android:name="com.task.black_fig.AdminPageActivity" />
        <activity android:name="com.task.black_fig.RecipesActivity" />
        <activity
            android:name="com.task.black_fig.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="com.task.black_fig.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>